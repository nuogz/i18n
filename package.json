{
	"name": "@nuogz/i18n",
	"version": "3.3.0",
	"description": "Base internationalization library based on i18next for Nuogz libraries",
	"author": "DanoR",
	"license": "LGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "github:nuogz/i18n"
	},
	"type": "module",
	"typesSource": [
		"node",
		"browser"
	],
	"typings": "./index.d.ts",
	"sideEffects": false,
	"engines": {
		"node": ">=14.18.1"
	},
	"main": "./index.js",
	"browser": {
		"./src/load-i18n-resource.lib.js": "./src/load-i18n-resource.js"
	},
	"files": [
		"index.js",
		"src/**",
		"**/*.d.ts"
	],
	"scripts": {
		"emitDeclaration": "tsc ./index.js --declaration --emitDeclarationOnly --module nodenext --moduleResolution nodenext --target esnext --experimentalDecorators --allowJs "
	},
	"dependencies": {
		"i18next": "^23.7.7"
	},
	"devDependencies": {
		"@types/node": "^20.10.3",
		"eslint": "^8.55.0",
		"typescript": "^5.3.2"
	}
}
