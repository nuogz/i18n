{
	"name": "@nuogz/i18n",
	"version": "3.2.0",
	"description": "base internationalization library based on i18next for Nuogz libraries",
	"author": "Nuogz",
	"license": "LGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "github:nuogz/i18n"
	},
	"type": "module",
	"typesSource": [
		"node",
		"browser"
	],
	"engines": {
		"node": ">=14.18.1"
	},
	"sideEffects": false,
	"main": "./index.js",
	"browser": {
		"./index.js": "./src/index.js"
	},
	"files": [
		"index.js",
		"**/*.d.ts"
	],
	"scripts": {
		"emitNodeDeclaration": "tsc ./index.js --declaration --emitDeclarationOnly --allowJs --moduleResolution nodenext --module esnext --target esnext --experimentalDecorators",
		"emitBrowserDeclaration": "tsc ./src/index.js --declaration --emitDeclarationOnly --allowJs --moduleResolution nodenext --module esnext --target esnext --experimentalDecorators"
	},
	"dependencies": {
		"i18next": "^22.5.0"
	},
	"devDependencies": {
		"eslint": "^8.41.0",
		"typescript": "^5.0.4"
	}
}
