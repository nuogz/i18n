{
	"name": "@nuogz/i18n",
	"version": "3.2.1",
	"description": "base internationalization library based on i18next for Nuogz libraries",
	"author": "Nuogz",
	"license": "LGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "github:nuogz/i18n"
	},
	"type": "module",
	"typesSource": [
		"node",
		"browser"
	],
	"engines": {
		"node": ">=14.18.1"
	},
	"sideEffects": false,
	"main": "./index.js",
	"browser": {
		"./src/load-i18n-resource.lib.js": "./src/load-i18n-resource.js"
	},
	"files": [
		"index.js",
		"src/**",
		"**/*.d.ts"
	],
	"scripts": {
		"emitDeclaration": "tsc ./index.js --declaration --emitDeclarationOnly --allowJs --moduleResolution nodenext --module esnext --target esnext --experimentalDecorators"
	},
	"dependencies": {
		"i18next": "^22.5.0"
	},
	"devDependencies": {
		"@types/node": "^20.2.5",
		"eslint": "^8.41.0",
		"typescript": "^5.0.4"
	}
}
